@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<section class="logout">
    <div class="logout__container">
        @{
            if (User.Identity?.IsAuthenticated ?? false)
            {
                <form class="logout__form" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                    <input type="submit" class="logout__button button" value="Нажмите, чтобы родтвердить выход из аккаунта" />
                </form>
            }
            else
            {
                <p>You have successfully logged out of the application.</p>
            }
        }
    </div>
</section>
